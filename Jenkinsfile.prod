pipeline {
    agent any
    parameters {
        run filter: 'SUCCESSFUL', name: 'PROMOTED_BUILD', projectName: 'WeatherForecast'
    }
    stages {
        stage("Deploy to production") {
            steps {
                sh "echo 'PBUILD: ${PROMOTED_BUILD_NUMBER}'"
                sh "docker-compose --env-file config/Prod.env config"
                sh "docker-compose --env-file config/Prod.env up -d"
            }
        }
    }
}